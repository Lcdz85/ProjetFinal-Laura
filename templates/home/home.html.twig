{% extends 'base.html.twig' %}

{% block title %}Hello {{user.username}}!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link rel="stylesheet" href="{{ asset('styles/map.css') }}">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">Localisation des posts</h1>
                <div class="card">
                    <div class="card-body">
                        <div id="map" data-api-endpoint="{{ path('api_localisations_all') }}"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div>
    <input type="button" value="Nouveau carnet" class="btn btn-secondary" onclick="window.location.href='{{ path('page_nouveau_carnet') }}'"> 
</div>
<hr>

<h2>Mes Carnets créés</h2>
<div>
    {% for carnet in carnetsCrees %}
        <li><h4>{{carnet.titre}}</h4></li>
        {% if carnet.photo starts with 'http' %}
            <img src="{{ carnet.photo }}" alt="Photo du carnet" width="150">
        {% else %}
            <img src="{{ asset('uploads/carnets/' ~ carnet.photo) }}" alt="Photo du carnet" width="150">
        {% endif %}
        <p>{{carnet.dateCarnet|date('d/m/Y')}}</p>
        
        <a href="{{ path('page_afficher_carnet', {'id': carnet.id}) }}">Voir</a>
    {% endfor %}
</div>


<h2>Commentaires sur mes carnets</h2>
<div>
    {% for comment in comments %}
        <div>
            <li><h4>{{comment.post.carnet.titre}}</h4></li>
            <h6>{% if comment.utilisateur.photo starts with 'http' %}
            <img src="{{ comment.utilisateur.photo }}" alt="Avatar" width="50">
            {% else %}
            <img src="{{ asset('uploads/avatar/' ~ comment.utilisateur.photo) }}" alt="Avatar" width="50">
            {% endif %}
            {{comment.utilisateur.username}}</h6>
            <p>{{comment.dateComment|date('d/m/Y')}}
        <a href="{{ path('page_afficher_carnet', {'id': comment.post.carnet.id}) }}">Voir</a>

        </div>
    {% endfor %}
</div>

<h2>Mes Carnets accessibles</h2>
<div>
    {% for carnet in carnetsAcces %}
        <li><h4>{{carnet.titre}}</h4></li>
        {{carnet.dateCarnet|date('d/m/Y')}}
        {% if carnet.photo starts with 'http' %}
        <img src="{{ carnet.photo }}" alt="Photo du carnet" width="150">
        {% else %}
        <img src="{{ asset('uploads/carnets/' ~ carnet.photo) }}" alt="Photo du carnet" width="150">
        {% endif %}
        <a href="{{ path('page_afficher_carnet', {'id': carnet.id}) }}">Voir</a>

    {% endfor %}
</div>

 <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
<script src="{{ asset('JS/map.js') }}"></script>
{% endblock %}