{% extends 'base.html.twig' %}

{% block title %}Hello {{user.username}}!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
 <input type="button" value="Nouveau carnet" class="btn btn-secondary" onclick="window.location.href='{{ path('page_nouveau_carnet') }}'"> 
</div>

<div class="example-wrapper">
    <h2>Mes Carnets créés</h2>
    {% for carnet in carnetsCrees %}
        <li><h4>{{carnet.titre}}</h4></li>
        <img src="{{ carnet.photo }}" alt="Photo du carnet" width="150">
        <p>{{carnet.dateCarnet|date('d/m/Y')}}</p>
        
        <a href="{{ path('page_afficher_carnet', {'id': carnet.id}) }}">Voir</a>
    {% endfor %}
</div>


<div class="example-wrapper">
    <h2>Comments sur mes carnets</h2>
    {% for comment in comments %}
        <div>
            <li><h4>{{comment.post.carnet.titre}}</h4></li>
            <h6><img src="{{ comment.utilisateur.photo }}" alt="Avatar" width="50">
            {{comment.utilisateur.username}}</h6>
            <p>{{comment.dateComment|date('d/m/Y')}}
        <a href="{{ path('page_afficher_carnet', {'id': comment.post.carnet.id}) }}">Voir</a>

        </div>
    {% endfor %}
</div>

<div class="example-wrapper">
    <h2>Mes Carnets accessibles</h2>
    {% for carnet in carnetsAcces %}
        <li><h4>{{carnet.titre}}</h4></li>
        {{carnet.dateCarnet|date('d/m/Y')}}
        <img src="{{ carnet.photo }}" alt="Photo du carnet" width="150">
        <a href="{{ path('page_afficher_carnet', {'id': carnet.id}) }}">Voir</a>

    {% endfor %}
</div>


{% endblock %}
